    <div class="col-md-3">
        <div style="overflow:hidden;">
            <div class="form-group">
                <div id="datetimepicker12"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        moment.locale('de');

        $('#datetimepicker12').datetimepicker({
            inline: true,
            sideBySide: false,
            format: 'L', //Localized Date
            locale: moment.locale('de')
        });
    });
    </script>
}

